{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openagents.dev/schemas/agent-task.schema.json",
  "title": "AgentTask",
  "description": "Task request handled by the orchestrator and agents.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "goal",
    "context",
    "constraints",
    "reply_to"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique task identifier.",
      "minLength": 1
    },
    "goal": {
      "type": "string",
      "description": "Main user objective for the task.",
      "minLength": 1
    },
    "context": {
      "type": "object",
      "description": "Additional contextual data for execution."
    },
    "constraints": {
      "type": "object",
      "description": "Execution constraints such as budget, timeout or scope limits."
    },
    "reply_to": {
      "type": "string",
      "description": "Target channel or queue for the final response.",
      "minLength": 1
    }
  }
}
